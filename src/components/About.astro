---
interface Props {
  about: string;
  companyName: string;
  template?: 'classic' | 'bold' | 'modern';
  aboutImageUrl?: string;
}

const { about, companyName, template = 'classic', aboutImageUrl } = Astro.props;
---

<section id="about" class:list={['about', `about--${template}`]}>
  <div class="container">
    <div class:list={['about-content', `about-content--${template}`, aboutImageUrl && 'about-content--with-image']}>
      <div class="about-text">
        {template === 'modern' && <span class="section-label">Our Story</span>}
        <h2 class="section-title">About {companyName}</h2>
        <p class="about-description">{about}</p>
        {template === 'modern' && (
          <div class="about-stats">
            <div class="stat">
              <span class="stat-number">15+</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat">
              <span class="stat-number">500+</span>
              <span class="stat-label">Projects Completed</span>
            </div>
            <div class="stat">
              <span class="stat-number">100%</span>
              <span class="stat-label">Satisfaction</span>
            </div>
          </div>
        )}
      </div>
      {aboutImageUrl ? (
        <div class="about-image">
          <img src={aboutImageUrl} alt={`About ${companyName}`} loading="lazy" />
        </div>
      ) : (
        <div class="about-features">
          <div class="feature">
            <span class="feature-icon">✓</span>
            <span class="feature-text">Licensed & Insured</span>
          </div>
          <div class="feature">
            <span class="feature-icon">✓</span>
            <span class="feature-text">Free Estimates</span>
          </div>
          <div class="feature">
            <span class="feature-icon">✓</span>
            <span class="feature-text">Satisfaction Guaranteed</span>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .about {
    padding: 5rem 0;
  }

  .about--classic {
    background-color: var(--color-gray-50);
  }

  .about--bold {
    background-color: var(--color-white);
  }

  .about--modern {
    background-color: var(--color-white);
    padding: 7rem 0;
  }

  .section-label {
    display: block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-orange);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .section-title {
    font-size: 2.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-gray-900);
  }

  .about--bold .section-title {
    color: var(--color-navy);
  }

  .about--modern .section-title {
    color: var(--color-black);
    font-size: 2.5rem;
    letter-spacing: -0.02em;
  }

  /* Classic: Centered, stacked layout */
  .about-content--classic {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  /* Classic with image - side by side */
  .about-content--classic.about-content--with-image {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 1000px;
    text-align: left;
    align-items: center;
  }

  .about--classic .about-description {
    color: var(--color-gray-600);
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .about--classic .about-content--with-image .about-description {
    margin-bottom: 0;
  }

  .about--classic .about-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .about--classic .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .about--classic .feature-icon {
    color: var(--color-orange);
    font-weight: bold;
  }

  .about--classic .feature-text {
    font-weight: 500;
    color: var(--color-gray-700);
  }

  /* About image styles */
  .about-image {
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.2);
  }

  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .about--classic .about-image {
    height: 300px;
  }

  /* Bold: Side-by-side layout */
  .about-content--bold {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about--bold .about-description {
    color: var(--color-gray-600);
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .about--bold .about-image {
    height: 350px;
  }

  .about--bold .about-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .about--bold .feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background-color: var(--color-gray-50);
    border-radius: 0.5rem;
    border-left: 3px solid var(--color-orange);
  }

  .about--bold .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background-color: var(--color-orange);
    color: var(--color-white);
    border-radius: 50%;
    font-size: 0.875rem;
    font-weight: bold;
  }

  .about--bold .feature-text {
    font-weight: 600;
    color: var(--color-navy);
  }

  /* Modern: Asymmetric layout */
  .about-content--modern {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 5rem;
    align-items: center;
  }

  .about-content--modern.about-content--with-image {
    grid-template-columns: 1fr 1fr;
  }

  .about--modern .about-description {
    color: var(--color-gray-600);
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 3rem;
  }

  .about--modern .about-image {
    height: 450px;
    border-radius: 0;
    box-shadow: none;
    position: relative;
  }

  .about--modern .about-image::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: 20px;
    bottom: 20px;
    border: 2px solid var(--color-orange);
    z-index: -1;
  }

  .about--modern .about-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .about--modern .feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background-color: var(--color-gray-50);
    border-left: 3px solid var(--color-black);
    transition: border-color 0.2s;
  }

  .about--modern .feature:hover {
    border-left-color: var(--color-orange);
  }

  .about--modern .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--color-black);
    color: var(--color-white);
    font-size: 1rem;
    font-weight: bold;
  }

  .about--modern .feature-text {
    font-weight: 600;
    color: var(--color-black);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
  }

  /* Modern stats */
  .about-stats {
    display: flex;
    gap: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-200);
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-black);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 1.75rem;
    }

    .about-content--bold,
    .about-content--classic.about-content--with-image,
    .about-content--modern {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .about--classic .about-features {
      flex-direction: column;
      gap: 1rem;
    }

    .about-image {
      height: 250px !important;
    }

    .about--modern .about-image::before {
      display: none;
    }

    .about-stats {
      flex-wrap: wrap;
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>
